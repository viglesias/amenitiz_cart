<%= render 'shared/menu'%>
<div class="page-content">
  <p id="notice"><%= notice %></p>

  <h1>Products</h1>

  <table id="products" class="table">
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Price</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr id='<%="product-#{product.id}"%>'>
          <td><%= product.code %></td>
          <td><%= product.name %></td>
          <td><%= product.price %>â‚¬</td>
          <td><%= button_to "Add Product", "cart/add/#{product.code}", method: :put, class: "add-button" %></td>
          <td><%= button_to "Remove Product", "cart/remove/#{product.code}", method: :put, class: "remove-button" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>Items in cart: <%= @cart_items_counter || 0 %></p>
</div>

